<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_rounded"
        app:cardBackgroundColor="@color/colorRow"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:background="@drawable/background_rounded"
            android:maxHeight="100dp"
            android:maxWidth="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:tint="#63000000" />

        <TextView
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/centurygothic"
            android:gravity="center_horizontal"
            android:maxWidth="15dp"
            android:text="Lingkungan"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="212dp"
            app:srcCompat="@drawable/location" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="243dp"
            app:srcCompat="@drawable/description" />

        <TextView
            android:id="@+id/etAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="212dp"
            android:ellipsize="end"
            android:fontFamily="@font/centurygothic"
            android:maxLength="30"
            android:maxLines="1"
            android:text="Jalan Mangunkuncoro"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="243dp"
            android:ellipsize="end"
            android:fontFamily="@font/centurygothic"
            android:maxLength="50"
            android:maxLines="2"
            android:text="Pohon roboh disini dan belum dibersihkan, jadi mengganggu pengguna jalan yang lain"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/etUpdatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/centurygothic"
            android:text="4 Jam yang lalu"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
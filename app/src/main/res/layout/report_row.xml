<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/colorRow"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="145dp"
            android:layout_height="90dp"
            android:maxHeight="100dp"
            android:maxWidth="150dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/etAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="32dp"
            android:ellipsize="end"
            android:fontFamily="@font/centurygothic"
            android:maxLength="30"
            android:maxLines="1"
            android:text="Jalan Mangunkuncoro"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/centurygothic"
            android:text="Deskripsi Laporan:"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="70dp"
            android:ellipsize="end"
            android:fontFamily="@font/centurygothic"
            android:maxLength="50"
            android:maxLines="2"
            android:text="Pohon roboh disini dan belum dibersihkan, jadi mengganggu pengguna jalan yang lain"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/location" />

        <TextView
            android:id="@+id/etUpdatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/centurygothic"
            android:text="4 Jam yang lalu"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="150dp"
            android:fontFamily="@font/centurygothic"
            android:maxWidth="15dp"
            android:text="Lingkungan"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
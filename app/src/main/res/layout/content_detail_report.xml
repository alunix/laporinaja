<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.wahyuadepratama.laporinaja.DetailReportActivity"
    tools:showIn="@layout/activity_detail_report">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorRow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photoDetail">

                <ImageView
                    android:id="@+id/photoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    tools:layout_editor_absoluteY="4dp" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/jenisLaporan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Jenis Laporan"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/photoDetail"
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=":"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/photoDetail"
                        android:layout_marginLeft="100dp"
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/etTypeDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Fasilitas"
                        app:layout_constraintStart_toStartOf="@+id/jenisLaporan"
                        app:layout_constraintTop_toBottomOf="@+id/photoDetail"
                        android:layout_marginLeft="120dp"
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/lokasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Lokasi"
                        app:layout_constraintTop_toBottomOf="@+id/jenisLaporan" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=":"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <TextView
                        android:id="@+id/etLocationDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Mata Air"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/lokasi"
                        app:layout_constraintTop_toBottomOf="@+id/jenisLaporan" />

                    <TextView
                        android:id="@+id/latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="54dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Latitude"
                        app:layout_constraintTop_toBottomOf="@+id/lokasi" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="54dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=":"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <TextView
                        android:id="@+id/etLatDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="54dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="-100.1232"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lokasi" />

                    <TextView
                        android:id="@+id/longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Longitude"
                        app:layout_constraintTop_toBottomOf="@+id/latitude" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=":"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />

                    <TextView
                        android:id="@+id/etLangDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="90.12312"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/latitude" />

                    <TextView
                        android:id="@+id/pelapor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Pelapor"
                        app:layout_constraintTop_toBottomOf="@+id/longitude" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=":"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView8" />

                    <TextView
                        android:id="@+id/etOwnerDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Wahyu Ade Pratama"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/longitude" />

                    <TextView
                        android:id="@+id/waktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Waktu"
                        app:layout_constraintTop_toBottomOf="@+id/pelapor" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=":"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView11" />

                    <TextView
                        android:id="@+id/etUpdateAtDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="4 Hari yang lalu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pelapor" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Status"
                        app:layout_constraintTop_toBottomOf="@+id/waktu" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=":"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView12" />

                    <TextView
                        android:id="@+id/etStatusDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="waiting"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/waktu" />

                    <TextView
                        android:id="@+id/deskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text="Deskripsi"
                        app:layout_constraintTop_toBottomOf="@+id/status" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=":"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView15" />

                    <TextView
                        android:id="@+id/etDescriptionDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/centurygothic"
                        android:text=" blabl bla bla blabla bla"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/status" />
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
